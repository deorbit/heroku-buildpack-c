#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

set -e
set -o pipefail

#BUILD_DIR=$1
BUILD_DIR=$1/${C_BUILD_DIR}
CACHE_DIR=$2

function indent() {
  c='s/^/       /'
  case $(uname) in
    Darwin) sed -l "$c";;
    *)      sed -u "$c";;
  esac
}

ls $BUILD_DIR
echo $BUILD_DIR
echo ${C_BUILD_DIR}
cd ${BUILD_DIR}

# configure
if [ -f configure ]; then
  echo "-----> Configuring"
  ./configure 2>&1 | indent
fi

# make
echo "-----> Compiling with Make"
make 2>&1 | indent
