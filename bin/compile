#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

set -e
set -o pipefail

#BUILD_DIR=$1
BUILD_DIR=$1/${C_BUILD_DIR}
CACHE_DIR=$2

function indent() {
  c='s/^/       /'
  case $(uname) in
    Darwin) sed -l "$c";;
    *)      sed -u "$c";;
  esac
}

echo "Current directory:"
pwd
echo "ls"
ls
echo "ls BUILD_DIR:"
ls $BUILD_DIR
echo "BUILD_DIR:"
echo $BUILD_DIR
echo "C_BUILD_DIR"
echo ${C_BUILD_DIR}
echo "Changing directory to BUILD_DIR"
cd $BUILD_DIR
echo 
# configure
#if [ -f configure ]; then
echo "-----> Configuring"
$1/${C_BUILD_DIR}/configure 2>&1 | indent
#fi

# make
echo "-----> Compiling with Make"
make 2>&1 | indent
